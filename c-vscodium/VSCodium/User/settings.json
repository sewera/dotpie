{
  // editing
  // > font
  "editor.fontFamily": "SauceCodePro Nerd Font",
  "editor.fontSize": 15,

  // > autocomplete
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "on",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.cursorSurroundingLines": 8,
  "editor.cursorSurroundingLinesStyle": "default",
  "editor.stickyScroll.enabled": true,

  // > behavior and appearance
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": false,
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "workbench.editor.labelFormat": "short",
  // > > theme
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "editorCursor.foreground": "#78909c",
      "editorCursor.background": "#192228",
      "terminalCursor.foreground": "#78909c",
      "terminalCursor.background": "#192228"
    },
    "[Atom One Light]": {
      "editorCursor.foreground": "#d1d1d1",
      "editorCursor.background": "#42789c",
      "terminalCursor.foreground": "#d1d1d1",
      "terminalCursor.background": "#42789c"
    }
  },
  // > > text, lines, and columns
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.rulers": [80, 120, 150],
  "editor.lineNumbers": "relative",
  // > > docs
  "editor.parameterHints.enabled": true,
  // > > cursor
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorBlinking": "solid",
  // > > automatic actions
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // > > handling files
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // > > terminal
  "terminal.integrated.tabs.enabled": true,

  // misc
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "update.showReleaseNotes": true,

  // git
  "git.autofetch": true,
  "git.autofetchPeriod": 300,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  // vim (to be moved to vimrc)
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<C-j>": true,
    "<C-k>": true
  },
  "vim.ignorecase": false,
  "vim.smartcase": false,
  "vim.leader": " ",
  "vim.camelCaseMotion.enable": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "e"],
      "commands": ["editor.action.marker.next"],
      "when": "editorFocus"
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.refactor"]
    },
    {
      "before": ["<leader>", "R"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<A-k>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "c", "c"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["editor.action.selectHighlights"]
    },
    {
      "before": ["<C-x>"],
      "commands": ["workbench.action.tasks.build"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "<space>"],
      "commands": ["problems.action.showQuickFixes"],
      "when": "problemFocus"
    },
    {
      "before": ["<leader>", "<space>"],
      "commands": ["editor.action.quickFix"],
      "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["<leader>", "t", "t"],
      "commands": ["workbench.action.maximizeEditor", "workbench.action.closePanel"]
    },
    {
      "before": ["<leader>", "t", "x"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["<leader>", "t", "p"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "t", "n", "n"],
      "commands": ["notifications.toggleList"]
    },
    {
      "before": ["<leader>", "t", "n", "c"],
      "commands": ["notifications.clearAll"]
    },
    {
      "before": ["<leader>", "t", "g"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["<leader>", "g", "c"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["<leader>", "g", "p"],
      "commands": ["git.push"]
    },
    {
      "before": ["<leader>", "g", "u"],
      "commands": ["git.pull"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["workbench.action.replaceInFiles"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "m"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["editor.action.selectHighlights"]
    },
    {
      "before": ["g", "c"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["editor.action.moveCarretLeftAction"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["editor.action.moveCarretRightAction"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["workbench.action.replaceInFiles"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],

  // language-specific
  // > frontend
  // > > imports
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // > > formatting
  "[javascript][javascriptreact][typescript][typescriptreact][json][jsonc][html][vue][handlebars][css][scss][less][markdown][mdx][astro][graphql][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // > > > default Prettier config
  "prettier.printWidth": 120,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": false,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "avoid",
  "prettier.endOfLine": "lf",
  // > > linting
  "eslint.codeActionsOnSave.mode": "all",

  // > go
  "go.toolsManagement.autoUpdate": true,

  // > markdown
  "[markdown]": {
    "editor.occurrencesHighlight": "off",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  // > LaTeX
  "latex-workshop.latex.autoBuild.run": "never",

  // > spelling
  "cSpell.userWords": ["Blazej", "fizzbuzz", "kata", "notipie", "Sewera"],
  "markyMarkdown.statsShowReadingTime": false,
  "markyMarkdown.statsShowWords": true,
  "markyMarkdown.statsShowLines": false,
  "markyMarkdown.statsShowCharacters": false
}
